{
  "compilerOptions": {
    /* === Core Settings === */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Node.js Environment === */
    "lib": ["ESNext"],
    "types": ["node"],

    /* === Module Interop === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* === TypeScript Strictness === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    /* === Build Support === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Misc === */
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
