{
    "swagger": "2.0",
    "info": {
        "title": "My API",
        "description": "API Documentation for Users, Products, and CartItems",
        "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": ["http"],
    "paths": {
        "/users/register": {
            "post": {
                "summary": "Register new user",
                "description": "Registers a new user with email, password, and role.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "role": { "type": "string", "example": "seller" },
                                "email": { "type": "string", "example": "user@example.com" },
                                "password": { "type": "string", "example": "123456" }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": { "description": "User created" },
                    "400": { "description": "Bad Request" },
                    "500": { "description": "Internal Server Error" }
                }
            }
        },
        "/users/login/email": {
            "post": {
                "summary": "Login by email",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": { "type": "string", "example": "user@example.com" },
                                "password": { "type": "string", "example": "123456" }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "Login successful" },
                    "401": { "description": "Invalid credentials" },
                    "404": { "description": "User not found" }
                }
            }
        },
        "/users/login/number": {
            "post": {
                "summary": "Login by phone number",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "number": { "type": "string", "example": "9876543210" },
                                "password": { "type": "string", "example": "123456" }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": { "description": "Login successful" },
                    "401": { "description": "Invalid credentials" },
                    "404": { "description": "User not found" }
                }
            }
        },
        "/users/logout": {
            "post": {
                "summary": "Logout current device",
                "responses": {
                    "200": { "description": "Logged out successfully" },
                    "400": { "description": "Bad Request" }
                }
            }
        },
        "/users/alldevicelogout": {
            "post": {
                "summary": "Logout from all devices",
                "responses": {
                    "200": { "description": "Logged out from all devices" }
                }
            }
        },
        "/products/createproduct": {
            "post": {
                "summary": "Create a new product",
                "responses": {
                    "201": { "description": "Product created successfully" },
                    "500": { "description": "Internal Server Error" }
                }
            }
        },
        "/products/getallproducts": {
            "get": {
                "summary": "Get all products",
                "responses": {
                    "200": { "description": "List of products returned" }
                }
            }
        },
        "/products/searchproduct": {
            "get": {
                "summary": "Search products",
                "responses": {
                    "200": { "description": "Search results returned" }
                }
            }
        },
        "/products/{id}": {
            "get": {
                "summary": "Get product by ID",
                "parameters": [
                    { "name": "id", "in": "path", "required": true, "type": "string" }
                ],
                "responses": {
                    "200": { "description": "Product found" },
                    "404": { "description": "Not found" }
                }
            }
        },
        "/products/updateproduct/{id}": {
            "put": {
                "summary": "Update a product",
                "parameters": [
                    { "name": "id", "in": "path", "required": true, "type": "string" }
                ],
                "responses": {
                    "200": { "description": "Product updated" }
                }
            }
        },
        "/products/deleteproduct/{id}": {
            "delete": {
                "summary": "Delete a product",
                "parameters": [
                    { "name": "id", "in": "path", "required": true, "type": "string" }
                ],
                "responses": {
                    "200": { "description": "Product deleted" },
                    "404": { "description": "Product not found" }
                }
            }
        },
        "/cartitems/proforcar/{productId}": {
            "post": {
                "summary": "Add product to cart",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "Product ID to add to cart"
                    }
                ],
                "responses": {
                    "200": { "description": "Product added to cart" },
                    "401": { "description": "Unauthorized" }
                }
            }
        },
        "/cartitems/deleteprofromcart/{productId}": {
            "delete": {
                "summary": "Delete product from cart",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "Product ID to remove from cart"
                    }
                ],
                "responses": {
                    "200": { "description": "Product removed from cart" },
                    "401": { "description": "Unauthorized" }
                }
            }
        }
    }
}
